<h3>Comentarios</h3>
<div class="row">
  <div class="col-md-6">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Cuenta</th>
            <th>Comentario</th>
            <th>Fecha</th>
          </tr>
        </thead>
        {{#each comentarios}}
          <tr>
            <td>{{this.nombreUsuario}}</td>
            <td>{{this.detalle}}</td>
            <td>{{this.fecha}}</td>
          </tr>
        {{/each}}
      </table>
    </div>
  </div>

  <div class="col-md-6">
    <form action="/store-comentario" method="POST">
      <div class="my-2">
        <label for="nombreUsuario">Nombre</label>
        <input
          type="text"
          id="nombreUsuario"
          name="nombreUsuario"
          class="form-control"
        />
      </div>
      <div class="my-2">
        <label for="detalle"></label>
        <textarea
          class="form-control"
          name="detalle"
          id="detalle"
          cols="30"
          rows="10"
        ></textarea>
      </div>

      <div class="text-end">
        <button class="btn btn-primary">COMENTA</button>
      </div>
    </form>
  </div>
</div>